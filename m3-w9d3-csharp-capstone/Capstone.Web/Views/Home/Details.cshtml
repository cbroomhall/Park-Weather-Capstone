@model Capstone.Web.Models.ParkModel

@{
    ViewBag.Title = "Details";
}

<h2>@Model.ParkName Details</h2>

<div>
    <h4>ParkModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Park Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParkName)
        </dd>

        <dt>
            Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            Size of Park
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Acreage)
        </dd>

        <dt>
            Elevation
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ElevationInFeet)
        </dd>

        <dt>
            Miles of Trails
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MilesOfTrail)
        </dd>

        <dt>
            Number of Camp Sites
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfCapmpSites)
        </dd>

        <dt>
            Climate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Climate)
        </dd>

        <dt>
            Year Founded
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YearFounded)
        </dd>

        <dt>
            Annual Visitors
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnnualVistorCount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InspirationalQuote)
        </dt>

        <dd>
            "@Html.DisplayFor(model => model.InspirationalQuote)"
        </dd>

        <dt>
            
        </dt>

        <dd>
            -@Html.DisplayFor(model => model.InspirationalQuoteSource)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParkDescription)
        </dd>

        <dt>
            Park Entry Fee
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EntryFee)
        </dd>

        <dt>
            # of Animal Species
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfAnimalSpecies)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Get 5-Day Forecast", "Forecast", new { id = Model.ParkCode }) |
    @Html.ActionLink("Return to List", "Index")
</p>
