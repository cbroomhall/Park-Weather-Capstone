@model Capstone.Web.Models.ParkModel

@{
    ViewBag.Title = "Details";
}

<h2>@Model.ParkName Details</h2>
<h5>@Html.ActionLink("Get 5-Day Forecast", "Forecast", new { id = Model.ParkCode })</h5>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>

        </dt>

        <dd>
            <img style="height: 250px; width: 800px" src="~/Content/img/parks/@(Model.ParkCode).jpg" />
        </dd>
        <dd>
            "@Html.DisplayFor(model => model.InspirationalQuote)"
        </dd>
        <dd>
            -@Html.DisplayFor(model => model.InspirationalQuoteSource)
        </dd>
        <br />
        <dt>
            Park Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParkName)
        </dd>

        <dt>
            Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            Size of Park
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Acreage) acres
        </dd>

        <dt>
            Elevation
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ElevationInFeet) ft.
        </dd>

        <dt>
            Miles of Trails
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MilesOfTrail) miles
        </dd>

        <dt>
            Number of Camp Sites
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfCapmpSites)
        </dd>

        <dt>
            Climate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Climate)
        </dd>

        <dt>
            Year Founded
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YearFounded) A.D.
        </dd>

        <dt>
            Annual Visitors
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnnualVistorCount) happy people
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParkDescription)
        </dd>

        <dt>
            Park Entry Fee
        </dt>

        <dd>
            $@Html.DisplayFor(model => model.EntryFee)
        </dd>

        <dt>
            # of Animal Species
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfAnimalSpecies) species of critters
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Return to List", "Index")
</p>

</body>